<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="59dp"
        android:background="@drawable/back"/>
    <RelativeLayout
        android:id="@+id/u_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#6077f0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="修改密码"
            android:textSize="40sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/u_2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/u_1"
        android:padding="50dp"
        android:gravity="center">

        <EditText
            android:id="@+id/ed_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="请输入现密码"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="@drawable/style1"/>
        <EditText
            android:id="@+id/ed_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_1"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="@drawable/style1"/>
        <EditText
            android:id="@+id/ed_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_2"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:hint="再次输入现密码"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="@drawable/style1"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/u_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/u_2"
            android:gravity="center">
            <Button
                android:id="@+id/but_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认修改"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="30sp"
                android:background="@drawable/style3"
                />

    </RelativeLayout>
</RelativeLayout>