<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    >
    <ImageView
        android:id="@+id/im_pen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pen"
        android:background="@drawable/style1"/>
    <TextView
        android:id="@+id/button_set"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/style2"
        />

        <ImageView
            android:id="@+id/up_picture"
            android:src="@drawable/pokemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/button_set"
            android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_set"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/up_picture"
        android:text="我的名字"
        android:textSize="35sp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_pen"
        android:background="@drawable/style2"
        android:paddingLeft="25dp"
        android:text="用户名"
        android:textSize="25sp"
        android:layout_marginTop="7dp"/>


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:background="@drawable/style2"
        android:text="修改密码"
        android:paddingLeft="25dp"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_2"
        android:background="@drawable/style2"
        android:text="版本号"
        android:paddingLeft="25dp"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        />
    <TextView
       android:id="@+id/but_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="退出登录"
        android:textSize="25sp"
        android:background="@drawable/style2"
        android:gravity="center"
        android:layout_below="@id/tv_3"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>