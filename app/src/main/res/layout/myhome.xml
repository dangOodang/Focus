<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    >
    <TextView
    android:id="@+id/tv_set"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/style2"
    />
    <ImageView
        android:id="@+id/im_pen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pen"
        android:background="@drawable/style1"
        android:contentDescription="@string/image_out" />
    <ImageView
            android:id="@+id/up_picture"
            android:src="@drawable/pokemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tv_set"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/image_out"
        />

    <TextView
        android:id="@+id/up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:text="@string/myname"
        android:layout_below="@id/tv_set"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style2"
        android:paddingLeft="25dp"
        android:paddingRight="1dp"
        android:text="@string/username"
        android:textSize="25sp"
        android:layout_below="@id/im_pen"
        android:layout_marginTop="1dp"
        android:paddingStart="25dp"
        android:paddingEnd="1dp" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:background="@drawable/style2"
        android:text="@string/update_password"
        android:paddingLeft="25dp"
        android:paddingRight="1dp"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:paddingStart="25dp"
        android:paddingEnd="1dp" />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_2"
        android:background="@drawable/style2"
        android:text="@string/version_number"
        android:paddingLeft="25dp"
        android:paddingRight="1dp"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:paddingStart="25dp"
        android:paddingEnd="1dp" />
    <TextView
       android:id="@+id/but_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/out_login"
        android:textSize="25sp"
        android:background="@drawable/style2"
        android:gravity="center"
        android:layout_below="@id/tv_3"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>